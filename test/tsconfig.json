{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "umd",
    "sourceMap": true,
    "rootDir": "..",
    "baseUrl": "..",
    "outDir": "../dist/test",
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "es2017.object"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "examples",
    "node_modules"
  ]
}
